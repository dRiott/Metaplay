/**
 * Set up so that on mouseover Avatar, allows upload picture to change.
 */

$(document).ready(function() {
	
	$("#avatarDiv").mouseover(allowUpload);
	$("#avatarDiv").mouseleave(removeUpload);
		
	
}); // end document.ready


	function allowUpload() {
		$("#avatarUplaod").show();
	}
		
	function removeUpload() {
		$("#avatarUpload").hide();
	}
	
	//{
//	duration: 1000
//	}