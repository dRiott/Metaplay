/**
 *  Configures the sortable, draggable, and selectable tracks.
 */

$(document).ready(function () {

	
	$('td, th', '#tracksTable').each(function () {
        var cell = $(this);
        cell.width(cell.width());
    });

    $('#tracksTable tbody').sortable().draggable({
    	connectToSortable: "#playlistTable",
    	helper: "clone"
    }).selectable();
	
	$("#playlistTable tbody").sortable().droppable();
	
}); // end document.ready
