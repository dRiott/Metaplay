/**
 * Set up so that on mouseover Avatar, allows upload picture to change.
 */

$(document).ready(function() {
	
	$("#avatarDiv").mouseover(allowUpload);
	$("#profileContainer").mouseout(removeUpload);
//	$("#avatarUpload").mouseover(allowUpload);	
	
}); // end document.ready


	function allowUpload() {
		$("#avatarUpload").show();
	}
		
	function removeUpload() {
		//alert("left");
		$("#avatarUpload").hide(1000);
	}
	
	//{
//	duration: 1000
//	}